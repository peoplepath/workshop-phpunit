<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="vendor/autoload.php" colors="true" stopOnFailure="false" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.0/phpunit.xsd">
  <php>
    <ini name="error_reporting" value="-1"/>
    <ini name="xdebug.mode" value="coverage"/>
    <env name="APP_ENV" value="testing"/>
  </php>
  <testsuites>
    <testsuite name="Unit">
      <directory suffix=".php">tests/src</directory>
    </testsuite>
  </testsuites>
</phpunit>
